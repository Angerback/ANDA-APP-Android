<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.matias.anda.views.Login"
    android:orientation="vertical"
    android:background="@color/fondoNaranjo"
    android:padding="10dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#DCDCDC"
        android:hint="@string/NickName_text"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:id="@+id/et_login_nick" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_marginTop="20dp"
            android:background="#DCDCDC"
            android:hint="@string/pass_text"
            android:layout_marginLeft="0dp"
            android:id="@+id/et_login_pass" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <CheckBox
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/recordarme_text"
            android:id="@+id/cb_remember"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="0dp"

            android:padding="10dip"
            android:layout_alignLeft="@+id/btn_login_iniciarsesion"
            android:layout_alignStart="@+id/btn_login_iniciarsesion"
            android:checked="false" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iniciar SesiÃ³n"
            android:id="@+id/btn_login_iniciarsesion"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:background="#DCDCDC"
            android:padding="18dip"
            android:textStyle="bold"
            android:layout_marginLeft="0dp"
            android:layout_centerHorizontal="true" />

    </LinearLayout>

</LinearLayout>
