<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/imagen_inicio"
        android:scaleType="fitCenter"
        android:src="@drawable/imagen7" />

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.matias.anda.views.MainFragment">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_boton_text"
            android:id="@+id/btn_iniciarsesion"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="18dip"

            android:textSize="20dp"
            android:background="#AA808080"
            android:textColor="#ffffffff"
            android:layout_marginTop="125dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_registrarse"
            android:id="@+id/btn_registrarse"
            android:padding="18dip"
            android:textSize="20dp"
            android:background="#AA808080"
            android:textColor="#ffffffff"
            android:layout_marginTop="90dp"
            android:layout_below="@+id/btn_iniciarsesion"
            android:layout_alignRight="@+id/btn_iniciarsesion"
            android:layout_alignEnd="@+id/btn_iniciarsesion"
            android:layout_alignLeft="@+id/btn_iniciarsesion"
            android:layout_alignStart="@+id/btn_iniciarsesion" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/bienvenido_text"
            android:id="@+id/textView9"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:padding="12dip"
            android:background="#AADCDCDC"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</FrameLayout>