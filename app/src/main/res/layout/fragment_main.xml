<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/blancoOscuro"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/imagen_inicio"
        android:scaleType="fitStart"
        android:layout_marginTop="20dp"
        android:src="@drawable/imagen6" />

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.matias.anda.views.MainFragment">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_boton_text"
            android:id="@+id/btn_iniciarsesion"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="18dip"

            android:textSize="20dp"
            android:backgroundTint="#3a3aff"
            android:textColor="#ffffffff"
            android:layout_marginTop="240dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_registrarse"
            android:id="@+id/btn_registrarse"
            android:padding="18dip"
            android:textSize="20dp"
            android:backgroundTint="#3a3aff"
            android:textColor="#ffffffff"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/btn_iniciarsesion"
            android:layout_alignRight="@+id/btn_iniciarsesion"
            android:layout_alignEnd="@+id/btn_iniciarsesion"
            android:layout_alignLeft="@+id/btn_iniciarsesion"
            android:layout_alignStart="@+id/btn_iniciarsesion" />


    </RelativeLayout>
</FrameLayout>